<h1>All Items in <%=@category.name%> </h1>
<% if @cart_count %>
    <%= link_to "Cart: #{@cart_count} items", shopping_cart_path(session[:shopping_cart_id]) %><br>
<% end %>
<br>
<% if session[:user_id] == nil %>
    <%= link_to 'Sign Up/Login', login_path%>
    <% else %>
    <%= link_to 'My Profile', user_path(session[:user_id]) %>
    <br>
    <%= link_to "Logout", logout_path %>
<% end %>
<hr> 

<%  @category.items.each do |item| %>
    <div class="card">
        <img src="<%=item.image_url%>" alt="<%item.name%>" style="height:50px">
        <div class="container">
            <%= link_to item.name, item_path(item) %> <br><br>
        </div>
    </div>
<% end %>
<hr>
<%= link_to "Go Back", categories_path %>
