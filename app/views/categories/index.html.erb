<h1> All Categories </h1>
<% if @cart_count %>
    <%= link_to "Cart: #{@cart_count} items", shopping_cart_path(session[:shopping_cart_id]) %><br>
<% end %>
<hr>
<%= link_to 'Home', root_path %>
<br><br>
<% if session[:user_id] == nil %>
    <%= link_to 'Sign Up/Login', login_path%>
    <% else %>
    <%= link_to 'My Profile', user_path(session[:user_id]) %>
    <br>
    <%= link_to "Logout", logout_path %>
<% end %>

<hr>


<% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %> <br>
<% end %>
