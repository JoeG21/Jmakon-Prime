<h1>Edit Your Profile!</h1>

<% if flash[:errors] %>
  <% flash[:errors].keys.each do |key| %>
    <h4 style="color: red;"> Error: <%= "#{key} #{flash[:errors][key][0]}" %> </h4>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%=  f.label :username%>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br><br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br><br>
    <label>New Password: </label>
    <%= f.text_field :password %>
    <br><br>
    <label>Password Confirmation: </label>
    <%= password_field_tag :password_confirmation%>
    <br><br>
    <%= f.submit "Update" %>
<% end %>


