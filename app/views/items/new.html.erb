<h1> Create New Item </h1>
<hr>
<%= form_for @item do |f| %>
    <label>Item Name: </label>
    <%= f.text_field :name %><br><br>
    <label>Item Price: </label>
    <%= f.number_field :price %><br><br>
    <label>Category: </label>
    <%= f.collection_select(:category_id, @cat, :id, :name) %><br>
    <%= link_to "Create New Category", new_category_path %><br><br>
    <label>Description: </label><br>
    <%= f.text_area :des, :rows => 10, :cols => 40 %><br><br>
    <label>Image URL: </label>
    <%= f.text_field :image_url %><br><br>

    <%= f.submit %>

    

<% end %>

